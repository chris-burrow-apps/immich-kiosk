{
  "name": "immich-kiosk",
  "version": "0.8.1",
  "description": "",
  "main": "src/kiosk.ts",
  "scripts": {
    "lint": "pnpm exec eslint ./public/assets/js/kiosk.js",
    "js": "pnpm exec esbuild 'src/ts/kiosk.ts' --format=iife --global-name=kiosk --bundle --minify --target=es6 --outfile=./public/assets/js/kiosk.js ",
    "css": "pnpm exec esbuild --bundle --minify --loader:.css=css --external:*.woff --external:*.woff2 --external:*.ttf 'src/css/kiosk.css' --outfile=./public/assets/css/kiosk.css && pnpm css:postcss",
    "css:postcss": "postcss ./public/assets/css/kiosk.css --no-map -o ./public/assets/css/kiosk.css",
    "build": "pnpm test && pnpm css && pnpm js ",
    "test": "tsc --noEmit"
  },
  "keywords": [],
  "author": "Damon Golding",
  "license": "AGPL-3.0-only",
  "engine": {
    "node": "20.17.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "browserslist": "^4.24.2",
    "esbuild": "^0.24.0",
    "eslint": "^9.14.0",
    "eslint-plugin-compat": "^6.0.1",
    "globals": "^15.12.0",
    "htmx.org": "^2.0.3",
    "postcss": "^8.4.48",
    "postcss-cli": "^11.0.0",
    "postcss-nested": "^7.0.2",
    "typescript": "^5.6.3"
  },
  "browserslist": [
    "> 0.3%",
    "not op_mini all",
    "not IE 11"
  ]
}
